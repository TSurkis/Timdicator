<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tsurkis.timdicator.Timdicator
        android:id="@+id/timdicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="19dp"
        android:paddingBottom="30dp"
        app:number_of_circles="0"
        app:circle_radius="6dp"
        app:distance_between_circles="4dp"
        app:default_circle_color="@color/indicator_default_page_color"
        app:chosen_circle_color="@color/indicator_chosen_page_color"
        />
<!--


        android:layout_marginBottom="16dp"
        android:padding="8dp"
        app:circle_radius="10dp"
        app:distance_between_circles="5dp"
-->
    <Button
        android:id="@+id/switch_layouts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timdicator"
        android:layout_centerHorizontal="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:foreground="?selectableItemBackground"
        />

</RelativeLayout>
